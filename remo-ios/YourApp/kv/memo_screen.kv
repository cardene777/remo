<MemoScreen>
    BoxLayout:
        canvas:
            Color:
                rgb: get_color_from_hex("#FFFAFA")
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 30
        padding: [0, 30]


        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#6699CC")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            size_hint_y: .7
            Image:
                source: "images/book01.png"

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#FFFAFA")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 2
            padding: [50, 20]
            spacing: 50

            GridLayout:
                rows: 2
                canvas.before:
                    Color:
                        rgb: get_color_from_hex("#669999")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                GridLayout:
                    cols: 1
                    ImageButton:
                        source: "images/list01.png"
                        on_release:
                            app.get_data()
                GridLayout:
                    cols: 1
                    size_hint_y: .3
                    font_size: "20sp"
                    Label:
                        text: "メモ一覧"

            GridLayout:
                canvas.before:
                    Color:
                        rgb: get_color_from_hex("#669999")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 2
                padding: [0, 30]
                GridLayout:
                    cols: 1
                    ImageButton:
                        source: "images/check01.png"
                        on_release:
                            app.check_memo()

                GridLayout:
                    cols: 1
                    size_hint_y: .3
                    font_size: "20sp"
                    Label:
                        text: "メモ復習"

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#BC8F8F")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 2
            padding: [0, 30]
            size_hint_y: .7
            GridLayout:
                cols: 1
                ImageButton:
                    source: "images/home04.png"
                    on_release:
                        app.change_screen("home_screen")

            GridLayout:
                cols: 1
                size_hint_y: .3
                font_size: "20sp"
                Label:
                    text: "ホームに戻る"