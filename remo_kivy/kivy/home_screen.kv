#: import get_color_from_hex kivy.utils.get_color_from_hex

<HomeScreen>
    BoxLayout:
        canvas:
            Color:
                rgb: get_color_from_hex("#FFFAFA")
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 30
        padding: [0, 30]

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#FAEBD7")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/search.png"
                on_release:
                    app.change_screen("search_screen")

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#87CEEB")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/note01.png"
                on_release:
                    app.change_screen("note_screen")

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#28505D")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/settings.png"
                on_release:
                    app.change_screen("settings_screen")

