<AddMemoScreen>
    memo_title: memo_title
    memo_text: memo_text
    BoxLayout:
        canvas:
            Color:
                rgb: get_color_from_hex("#FFFAFA")
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 20


        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#669999")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            Image:
                source: "images/note01.png"

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#FAEBD7")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 3
            padding: [50, 30]
            spacing: 20

            TextInput:
                id: memo_title
                hint_text: "タイトル"
                font_size: "25sp"
                multiline: False
                focus: True
                text: ""
                cursor_width: "2sp"

            TextInput:
                id: memo_text
                hint_text: "メモ"
                font_size: "25sp"
                multiline: True
                focus: True
                text: ""
                cursor_width: "2sp"
                size_hint_y: 2

            Button:
                text: "データ追加"
                on_release: app.add_data(memo_title.text, memo_text.text, datetime.date.today()) if memo_text.text != "" and memo_title.text != "" else app.change_screen("error_screen", "入力していない部分があります。")

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#BC8F8F")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/home04.png"
                on_release:
                    app.change_screen("home_screen")