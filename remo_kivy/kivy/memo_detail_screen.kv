<MemoDetailScreen>
    BoxLayout:
        canvas:
            Color:
                rgb: get_color_from_hex("#FFFAFA")
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 30
        padding: [0, 30]


        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#6699CC")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/list01.png"
                on_release:
                    app.get_data()

        ScrollView:
            GridLayout:
                canvas:
                    Color:
                        rgb: get_color_from_hex("#669999")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                rows: 4
                padding: [0, 30]

                Label:
                    id: title_label
                    name: "title_label"
                    text: ""

                Label:
                    id: text_label
                    name: "text_label"
                    text: ""

                Label:
                    id: review_label
                    name: "review_label"
                    text: ""

                Label:
                    id: review_day_label
                    name: "review_day_label"
                    text: ""



        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#BC8F8F")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/home04.png"
                on_release:
                    app.change_screen("home_screen")