<SearchScreen>
    BoxLayout:
        canvas:
            Color:
                rgb: get_color_from_hex("#FFFAFA")
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 30
        padding: [0, 30]


        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#FAEBD7")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            Image:
                source: "images/search.png"

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#28505D")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [200, 120]
            TextInput:
                hint_text: "キーワード"
                font_size: "25sp"
                multiline: False
                padding: [30]


        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#BC8F8F")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/home04.png"
                on_release:
                    app.change_screen("home_screen")