<MemoScreen>
    BoxLayout:
        canvas:
            Color:
                rgb: get_color_from_hex("#FFFAFA")
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 30
        padding: [0, 30]


        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#6699CC")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            Image:
                source: "images/book01.png"

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#FFFAFA")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 2
            padding: [50, 0]
            spacing: 20

            ImageButton:
                canvas.before:
                    Color:
                        rgb: get_color_from_hex("#669999")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                source: "images/list01.png"
                on_release:
                    app.get_data()

            GridLayout:
                canvas.before:
                    Color:
                        rgb: get_color_from_hex("#669999")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                cols: 1
                padding: [0, 30]
                ImageButton:
                    source: "images/check01.png"
                    on_release:
                        print("a")

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#BC8F8F")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/home04.png"
                on_release:
                    app.change_screen("home_screen")