<MemoListScreen>
    BoxLayout:
        canvas:
            Color:
                rgb: get_color_from_hex("#FFFAFA")
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 30
        padding: [0, 30]


        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#6699CC")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/list01.png"
                on_release:
                    app.change_screen("memo_screen")

        ScrollView:
            GridLayout:
                canvas:
                    Color:
                        rgb: get_color_from_hex("#FFFAFA")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                cols: 1
                id: remo_data
                size_hint_y: None
                row_default_height: 150
                height: self.minimum_height

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#BC8F8F")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            padding: [0, 30]
            ImageButton:
                source: "images/home04.png"
                on_release:
                    app.change_screen("home_screen")