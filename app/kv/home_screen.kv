#: import get_color_from_hex kivy.utils.get_color_from_hex

<HomeScreen>
    BoxLayout:
        canvas:
            Color:
                rgb: get_color_from_hex("#FFFAFA")
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 30
        padding: [0, 30]

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#669999")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 2
            padding: [0, 30]
            ImageButton:
                source: "images/note01.png"
                on_release:
                    app.change_screen("add_memo_screen")

            GridLayout:
                cols: 1
                size_hint_y: .3
                font_size: "20sp"
                Label:
                    text: "メモ追加"

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#6699CC")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 2
            padding: [0, 30]
            GridLayout:
                cols: 1
                ImageButton:
                    source: "images/book01.png"
                    on_release:
                        app.change_screen("memo_screen")

            GridLayout:
                cols: 1
                size_hint_y: .3
                font_size: "20sp"
                Label:
                    text: "メモの確認・復習"

        GridLayout:
            canvas:
                Color:
                    rgb: get_color_from_hex("#666666")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 2
            padding: [0, 30]
            ImageButton:
                source: "images/settings.png"
                on_release:
                    app.change_screen("settings_screen")

            GridLayout:
                cols: 1
                size_hint_y: .3
                font_size: "20sp"
                Label:
                    text: "ログアウト"

